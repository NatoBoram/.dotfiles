{
  // Place your snippets for svelte here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "await": {
    "prefix": "await",
    "body": [
      "{#await $1}",
      "$3",
      "{:then $2}",
      "$0",
      "{:catch}",
      "$4",
      "{/await}"
    ]
  },
  "catch": {
    "prefix": "catch",
    "body": ["{:catch}", "$0"]
  },
  "const": {
    "prefix": "const",
    "body": ["{@const $1 = $2}", "$0"]
  },
  "each": {
    "prefix": "each",
    "body": ["{#each $1 as $2 ($3)}", "$0", "{/each}"]
  },
  "else if": {
    "prefix": "elseif",
    "body": ["{:else if $1}", "$0"]
  },
  "else": {
    "prefix": "else",
    "body": ["{:else}", "$0"]
  },
  "if else": {
    "prefix": "ifelse",
    "body": ["{#if $1}", "$0", "{:else}", "$2", "{/if}"]
  },
  "if": {
    "prefix": "if",
    "body": ["{#if $1}", "$0", "{/if}"]
  },
  "if else if": {
    "prefix": "ifelseif",
    "body": [
      "{#if $1}",
      "$3",
      "{:else if $2}",
      "$4",
      "{:else}",
      "$5",
      "{/if}",
      "$0"
    ]
  },
  "then": {
    "prefix": "then",
    "body": ["{:then $1}", "$0", "{:catch}", "$2"]
  }
}
